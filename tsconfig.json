{
    "compilerOptions": {
      "baseUrl": ".",
      "lib": ["ESNext"],
      "paths": {
        "*": ["src/*"]
      },
      "allowJs": true,
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "node",
      "sourceMap": true,
      "resolveJsonModule": true,
      "outDir": "./dist"
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules","./src/**/__tests__/*.ts"]
  }